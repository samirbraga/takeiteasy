<style>
	.main-menu-container{
		position: fixed;
		width: 100%;
		height: 100%;
		background: rgba(0,0,0,.5);
		right: 0;
		top: 0;
		z-index: 105;
		display: none;
	}
	.main-menu-container .main-menu{
		position: absolute;
		width: 400px;
		height: 100%;
		background: #fff;
		right: 0;
		top: 5px;
		z-index: 110;
		will-change: transform;
		-webkit-transition: transform 0.2s ease-in-out;
		-moz-transition: transform 0.2s ease-in-out;
		-ms-transition: transform 0.2s ease-in-out;
		-o-transition: transform 0.2s ease-in-out;
		transition: transform 0.2s ease-in-out;
		-webkit-transform: translateX(100%);
		-moz-transform: translateX(100%);
		-ms-transform: translateX(100%);
		-o-transform: translateX(100%);
		transform: translateX(100%);
	}
	.main-menu-container .main-menu.showed{
		-webkit-transform: translateX(0);
		-moz-transform: translateX(0);
		-ms-transform: translateX(0);
		-o-transform: translateX(0);
		transform: translateX(0);
		-webkit-box-shadow: -1px 0 10px 0 rgba(0,0,0,0.3);
		-moz-box-shadow: -1px 0 10px 0 rgba(0,0,0,0.3);
		-ms-box-shadow: -1px 0 10px 0 rgba(0,0,0,0.3);
		-o-box-shadow: -1px 0 10px 0 rgba(0,0,0,0.3);
		box-shadow: -1px 0 10px 0 rgba(0,0,0,0.3);
	}
	.main-menu-container .main-menu .main-menu-topbar{
		width: 100%;
		height: 85px;
		background: #fff;
		border-bottom: 1px solid #f9eaff;
	}
	.main-menu-container .main-menu .main-menu-content{
		width: 400px;
		height: calc(100% - 215px);
		height: calc(100% - 215px);
		height: calc(100% - 215px);
		background: #fff;
		padding: 20px 25px;
		overflow-y: auto;
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list{
		margin-bottom: 15px;
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list span{
		display: block;
		font-size: 1.2em;
		font-family: 'Roboto', sans-serif;
		margin-bottom: 10px;
		color: #9b59b6;
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list ul{
		margin-left: 15px;
		font-family: 'Asap', sans-serif;
		font-size: 0.9em;
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list ul a{
		color: rgba(52, 25, 63, 0.9);
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list ul a:hover{
		color: rgba(52, 25, 63, 1);
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list ul a:hover li{
		text-decoration: underline;
	}
	.main-menu-container .main-menu .main-menu-content .menu-services-area-list ul a li{
		line-height: 1.5em;
		color: inherit;
	}
	.main-menu-container .main-menu .main-menu-footer{
		position: absolute;
		width: 100%;
		height: 130px;
		background: #fff;
		right: 0;
		bottom: 0;
		z-index: 110;
		padding: 10px;
	}
	.main-menu-container .main-menu .main-menu-footer svg{
		display: block;
		margin: auto;
	}
	.main-menu-container .main-menu .main-menu-footer .logo-piece{
		fill: #9b59b6;
		opacity: 0.6;
	}
</style>
<div class="main-menu-container">
	<div class="main-menu">
		<div class="main-menu-topbar">
			
		</div>

		<article class="main-menu-content soft-scroll">
			<% for(area in sortedServices){ %>
				<section class="menu-services-area-list area-list-<%- area %>" >
					<span class="" ><%- areaNames[area] %></span>
					<ul>
						<% sortedServices[area].forEach(function(service, index) { %>
							<a href="<%- service.href %>">
								<li class="plain-li" ><%- service.name %></li>
							</a>
						<% }); %>
					</ul>
				</section>
			<% } %>
		</article>

		<footer class="main-menu-footer">
			<%- include('networking', {netw_class: 'dark'}); %>
			<%- include('logo-svg', {size: 'small'}); %>
		</footer>
	</div>
</div>