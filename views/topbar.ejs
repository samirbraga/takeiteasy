					xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:a="http://ns.adobe.com/AdobeSVGViewerExtensions/3.0/"
					x="0px" y="0px" width="31.017px" height="32.382px" viewBox="0 0 31.017 32.382" enable-background="new 0 0 31.017 32.382"
					xml:space="preserve">
					<defs>
